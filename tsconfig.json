{
    "compilerOptions":{
        "module": "commonjs",
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "moduleResolution": "node",
        "paths": {
            "": ["node_modules/", "src/types/"]
        }
    },
    "include": ["./src/**/*"],
}